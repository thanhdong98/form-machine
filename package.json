{
  "name": "form-machine",
  "private": false,
  "version": "0.0.11",
  "homepage": "https://thanhdong98.github.io/form-machine/",
  "description": "Form Builder",
  "author": "thanhdong98",
  "main": "dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thanhdong98/form-machine"
  },
  "keywords": [
    "form-builder",
    "form",
    "builder",
    "dynamic-form",
    "form-generator",
    "form-schema"
  ],
  "scripts": {
    "start": "react-scripts start",
    "clean": "rimraf dist/",
