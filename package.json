    "predeploy": "yarn build:demo",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "bootstrap": "5.1.0",
    "lodash.throttle": "^4.1.1",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.0-beta.6",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.1",
    "copyfiles": "^2.4.1",
    "gh-pages": "^3.2.3",
    "rimraf": "^3.0.2"
  },
  "files": [
    "/dist",
    "package.json"
  ],
  "eslintConfig": {
